{
  "name": "Easy-Erreur",
  "displayName": "hello",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.87.2"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./extension.js",
  "contributes": {
    "commands": [{
      "command": "Easy-Erreur.saveCodeSnippet",
      "title": "Save Code Snippet",
      "category": "easy-erreur",
      "args": [
        {
          "name": "selectedText",
          "type": "string"
        }
      ]
    }],
    "menus": {
      "editor/context": [{
        "when": "editorTextFocus",
        "command": "Easy-Erreur.saveCodeSnippet",
        "group": "navigation"
      }]
    }
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.88.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "eslint": "^8.57.0",
    "typescript": "^5.3.3",
    "@vscode/test-cli": "^0.0.8",
    "@vscode/test-electron": "^2.3.9"
  }
}
